{
  "name": "issue-tracker-mini-jira",
  "version": "1.0.0",
  "description": "a simple issue tracker built using TS.",
  "main": "src/index.ts",
  "scripts": {
    "compile": "webpack --watch",
    "start": "webpack --watch & live-server --open=./public/index.html",
    "build": "webpack",
    "test": "jest"
  },
  "author": "Abdullah1428",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "jest": "^29.2.1",
    "live-server": "^1.2.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
